{{!-- Page to show details of kandidatenlijsten --}}
<div class="details">
  <h2 class="title">{{t (humanize 'kandidatenlijst details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit kandidatenlijst
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "kandidatenlijsten" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "kandidatenlijsten.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of kandidatenlijst. --}}
