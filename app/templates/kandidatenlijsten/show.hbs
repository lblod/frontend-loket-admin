    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'lijstnaam'}}</td>
        {{handle-attribute model=model attribute='lijstnaam' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'lijstnummer'}}</td>
        {{handle-attribute model=model attribute='lijstnummer' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'lijsttype'}}</td>
       {{display-model-belongsto-relationship model=model.lijsttype itemRoute='lijsttypes.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'rechtstreekseVerkiezing'}}</td>
       {{display-model-belongsto-relationship model=model.rechtstreekseVerkiezing itemRoute='rechtstreekse-verkiezingen.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'kandidaten'}}</td>
       {{display-model-hasmany-relationship   model=model.kandidaten itemRoute='personen.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
    </tbody>
  </table>
</div>
