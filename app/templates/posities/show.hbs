{{!-- Page to show details of posities --}}
<div class="details">
  <h2 class="title">{{t (humanize 'positie details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit positie
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "posities" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "posities.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of positie. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
      
      <tr>
        <td class="properties__label">{{t 'rol'}}</td>
       {{display-model-belongsto-relationship model=model.rol itemRoute='rollen.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'isPositieIn'}}</td>
       {{display-model-belongsto-relationship model=model.isPositieIn itemRoute='organisaties.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'wordtIngevuldDoor'}}</td>
       {{display-model-hasmany-relationship   model=model.wordtIngevuldDoor itemRoute='personen.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
    </tbody>
  </table>
</div>
