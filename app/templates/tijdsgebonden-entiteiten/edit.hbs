{{!-- Page to edit tijdsgebonden-entiteit --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit tijdsgebonden-entiteit')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete tijdsgebonden-entiteit.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new tijdsgebonden-entiteit" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of tijdsgebonden-entiteit. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>bindingEinde</td>
      <td align='middle'>{{handle-date model=changeset attribute='bindingEinde' editable=true}}</td>
</tr>
      <tr>
      <td>bindingStart</td>
      <td align='middle'>{{handle-date model=changeset attribute='bindingStart' editable=true}}</td>
</tr>

        <tr><td>isTijdsspecialisatieVan</td><td align='middle'>{{edit-belongs-to relName=changeset.isTijdsspecialisatieVan relType="entiteit"}}</td></tr>
        

    </tbody>
  </table>
</div>
{{/with}}
