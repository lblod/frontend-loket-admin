{{!-- Page to edit validation --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit validation')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete validation.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new validation" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of validation. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>name</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='name' editable=true}}</td>
</tr>
      <tr>
      <td>description</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='description' editable=true}}</td>
</tr>
      <tr>
      <td>status</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='status' editable=true}}</td>
</tr>

        <tr><td>execution</td><td align='middle'>{{edit-belongs-to relName=changeset.execution relType="validation-execution"}}</td></tr>
        <tr><td>errors</td><td align='middle'>{{edit-has-many relName=changeset.errors relType="validation-error"}}</td></tr>

    </tbody>
  </table>
</div>
{{/with}}
