{{!-- Page to show details of files --}}
<div class="details">
  <h2 class="title">{{t (humanize 'file details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit file
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "files" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "files.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of file. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'filename'}}</td>
        {{handle-attribute model=model attribute='filename' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'format'}}</td>
        {{handle-attribute model=model attribute='format' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'size'}}</td>
        {{handle-attribute model=model attribute='size' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'extension'}}</td>
        {{handle-attribute model=model attribute='extension' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'created'}}</td>
        {{handle-date model=model attribute='created' tagName='td' classes='properties__data' timePicker=true}}
      </tr>


    </tbody>
  </table>
</div>
