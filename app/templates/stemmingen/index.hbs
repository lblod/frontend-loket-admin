{{!-- Page to list stemmingen --}}
<div class="content">
  <h2 class="title">{{t (humanize 'stemmingen')}}</h2>
  <div class="actions">{{#link-to "stemmingen.new" class="btn new" title="Create new item" tagName="button" }}Create{{/link-to}}</div>
  {{#if model}}
    <table>
      <thead>
        <tr>
          <th class="properties__label">id</th>
          {{sortable-table-header attribute="aantalOnthouders" currentSort=sort}}
{{sortable-table-header attribute="aantalTegenstanders" currentSort=sort}}
{{sortable-table-header attribute="aantalVoorstanders" currentSort=sort}}
{{sortable-table-header attribute="geheim" currentSort=sort}}
{{sortable-table-header attribute="title" currentSort=sort}}
{{sortable-table-header attribute="gevolg" currentSort=sort}}
{{sortable-table-header attribute="onderwerp" currentSort=sort}}

          
          {{sortable-table-header attribute="aanwezigen" currentSort=sort}}
{{sortable-table-header attribute="onthouders" currentSort=sort}}
{{sortable-table-header attribute="stemmers" currentSort=sort}}
{{sortable-table-header attribute="tegenstanders" currentSort=sort}}
{{sortable-table-header attribute="voorstanders" currentSort=sort}}
        </tr>
      </thead>
      <tbody>
        {{#each model as |item|}}
          {{#link-to "stemmingen.show" item tagName='tr' }}
              <td>{{handle-attribute model=item attribute='id' classes='properties__data'}}</td>
            {{handle-attribute model=item attribute='aantalOnthouders' tagName='td' classes='properties__data'}}
            {{handle-attribute model=item attribute='aantalTegenstanders' tagName='td' classes='properties__data'}}
            {{handle-attribute model=item attribute='aantalVoorstanders' tagName='td' classes='properties__data'}}
        <td>{{handle-attribute model=item attribute='geheim' classes='checkbox' boolean=true}}</td>
            {{handle-attribute model=item attribute='title' tagName='td' classes='properties__data'}}
            {{handle-attribute model=item attribute='gevolg' tagName='td' classes='properties__data'}}
            {{handle-attribute model=item attribute='onderwerp' tagName='td' classes='properties__data'}}

            {{display-model-hasmany-relationship   model=item.aanwezigen tagName='td' itemRoute='mandatarissen.show' configuredLabel='stringRep'}}
            {{display-model-hasmany-relationship   model=item.onthouders tagName='td' itemRoute='mandatarissen.show' configuredLabel='stringRep'}}
            {{display-model-hasmany-relationship   model=item.stemmers tagName='td' itemRoute='mandatarissen.show' configuredLabel='stringRep'}}
            {{display-model-hasmany-relationship   model=item.tegenstanders tagName='td' itemRoute='mandatarissen.show' configuredLabel='stringRep'}}
            {{display-model-hasmany-relationship   model=item.voorstanders tagName='td' itemRoute='mandatarissen.show' configuredLabel='stringRep'}}
          {{/link-to}}
        {{/each}}
      </tbody>
    </table>

    {{#if model.meta.pagination}}
      {{pagination-component page=page numberOfItems=model.length total=model.meta.count links=model.meta.pagination}}
    {{/if}}
  {{else}}
    <div class="empty">
      No {{t (humanize 'stemmingen')}} in the database.
      Click on the <i class="fa fa-plus" aria-hidden="true"></i> button to create a new {{t (humanize "stemming")}}.
    </div>
  {{/if}}
</div>
