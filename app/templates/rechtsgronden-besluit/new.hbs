{{!-- Page to create a new rechtsgrond-besluit --}}
<div class="new">
  <h2 class="title">{{t (humanize 'New rechtsgrond-besluit')}}</h2>

  {{!--
    Actions to save new rechtsgrond-besluit
    or delete new rechtsgrond-besluit.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new rechtsgrond-besluit" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>

  {{!-- Table to show details of rechtsgrond-besluit. --}}
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>buitenwerkingtreding</td>
<td align='middle'>{{handle-date model=model attribute='buitenwerkingtreding' editable=true}}</td>
      </tr>
      <tr>
        <td>inwerkingtreding</td>
<td align='middle'>{{handle-date model=model attribute='inwerkingtreding' editable=true}}</td>
      </tr>
      <tr><td>bestuursorgaan</td><td align='middle'>{{edit-belongs-to relName=model.bestuursorgaan relType="bestuursorgaan"}}</td></tr>
      <tr><td>rechtsgrondenArtikel</td><td align='middle'>{{edit-has-many relName=model.rechtsgrondenArtikel relType="rechtsgrond-artikel"}}</td></tr>
    </tbody>
  </table>
</div>
