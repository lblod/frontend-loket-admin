{{!-- Page to list vestigingen --}}
<div class="content">
  <h2 class="title">{{t (humanize 'vestigingen')}}</h2>
  <div class="actions">{{#link-to "vestigingen.new" class="btn new" title="Create new item" tagName="button" }}Create{{/link-to}}</div>
  {{#if model}}
    <table>
      <thead>
        <tr>
          <th class="properties__label">id</th>
          

          {{sortable-table-header attribute="vestigingsadres" currentSort=sort}}
          
        </tr>
      </thead>
      <tbody>
        {{#each model as |item|}}
          {{#link-to "vestigingen.show" item tagName='tr' }}
              <td>{{handle-attribute model=item attribute='id' classes='properties__data'}}</td>

            {{display-model-belongsto-relationship model=item.vestigingsadres tagName='td' itemRoute='contact-punten.show' configuredLabel='stringRep'}}

          {{/link-to}}
        {{/each}}
      </tbody>
    </table>

    {{#if model.meta.pagination}}
      {{pagination-component page=page numberOfItems=model.length total=model.meta.count links=model.meta.pagination}}
    {{/if}}
  {{else}}
    <div class="empty">
      No {{t (humanize 'vestigingen')}} in the database.
      Click on the <i class="fa fa-plus" aria-hidden="true"></i> button to create a new {{t (humanize "vestiging")}}.
    </div>
  {{/if}}
</div>
