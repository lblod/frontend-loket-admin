{{!-- Page to edit validation-execution --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit validation-execution')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete validation-execution.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new validation-execution" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of validation-execution. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>status</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='status' editable=true}}</td>
</tr>
      <tr>
        <td>{{t 'validationSet'}}</td>
        <td align='middle'>{{edit-string-set data=changeset.validationSet tagName='ul' classes='string-set'}}</td>
      </tr>
      <tr>
      <td>created</td>
      <td align='middle'>{{handle-date model=changeset attribute='created' editable=true timePicker=true}}</td>
</tr>

        
        <tr><td>errors</td><td align='middle'>{{edit-has-many relName=changeset.errors relType="validation-error"}}</td></tr>
      <tr><td>validations</td><td align='middle'>{{edit-has-many relName=changeset.validations relType="validation"}}</td></tr>

    </tbody>
  </table>
</div>
{{/with}}
