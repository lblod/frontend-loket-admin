{{!-- Page to create a new fractie --}}
<div class="new">
  <h2 class="title">{{t (humanize 'New fractie')}}</h2>

  {{!--
    Actions to save new fractie
    or delete new fractie.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new fractie" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>

  {{!-- Table to show details of fractie. --}}
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>naam</td>
<td align='middle'>{{handle-attribute model=model attribute='naam' editable=true}}</td>
      </tr>
      <tr><td>bestuurseenheid</td><td align='middle'>{{edit-belongs-to relName=model.bestuurseenheid relType="bestuurseenheid"}}</td></tr>
      <tr><td>fractietype</td><td align='middle'>{{edit-belongs-to relName=model.fractietype relType="fractietype"}}</td></tr>
      <tr><td>bestuursorganenInTijd</td><td align='middle'>{{edit-has-many relName=model.bestuursorganenInTijd relType="bestuursorgaan"}}</td></tr>
    </tbody>
  </table>
</div>
