{{!-- Page to show details of verkiezingsresultaten --}}
<div class="details">
  <h2 class="title">{{t (humanize 'verkiezingsresultaat details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit verkiezingsresultaat
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "verkiezingsresultaten" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "verkiezingsresultaten.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of verkiezingsresultaat. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'aantalNaamstemmen'}}</td>
        {{handle-attribute model=model attribute='aantalNaamstemmen' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'plaatsRangorde'}}</td>
        {{handle-attribute model=model attribute='plaatsRangorde' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'isResultaatVan'}}</td>
       {{display-model-belongsto-relationship model=model.isResultaatVan itemRoute='personen.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'isResultaatVoor'}}</td>
       {{display-model-belongsto-relationship model=model.isResultaatVoor itemRoute='kandidatenlijsten.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'gevolg'}}</td>
       {{display-model-belongsto-relationship model=model.gevolg itemRoute='verkiezingsresultaat-gevolg-codes.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>

    </tbody>
  </table>
</div>
