{{!-- Page to edit verkiezingsresultaat --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit verkiezingsresultaat')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete verkiezingsresultaat.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new verkiezingsresultaat" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of verkiezingsresultaat. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>aantalNaamstemmen</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='aantalNaamstemmen' editable=true}}</td>
</tr>
      <tr>
      <td>plaatsRangorde</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='plaatsRangorde' editable=true}}</td>
</tr>

        <tr><td>isResultaatVan</td><td align='middle'>{{edit-belongs-to relName=changeset.isResultaatVan relType="persoon"}}</td></tr>
      <tr><td>isResultaatVoor</td><td align='middle'>{{edit-belongs-to relName=changeset.isResultaatVoor relType="kandidatenlijst"}}</td></tr>
      <tr><td>gevolg</td><td align='middle'>{{edit-belongs-to relName=changeset.gevolg relType="verkiezingsresultaat-gevolg-code"}}</td></tr>
        

    </tbody>
  </table>
</div>
{{/with}}
