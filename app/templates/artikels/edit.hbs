{{!-- Page to edit artikel --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit artikel')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete artikel.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new artikel" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of artikel. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>nummer</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='nummer' editable=true}}</td>
</tr>
      <tr>
      <td>inhoud</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='inhoud' editable=true}}</td>
</tr>
      <tr>
      <td>taal</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='taal' editable=true}}</td>
</tr>
      <tr>
      <td>titel</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='titel' editable=true}}</td>
</tr>
      <tr>
      <td>page</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='page' editable=true}}</td>
</tr>
      <tr>
      <td>score</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='score' editable=true}}</td>
</tr>

        <tr><td>realisatie</td><td align='middle'>{{edit-belongs-to relName=changeset.realisatie relType="rechtsgrond-artikel"}}</td></tr>
        

    </tbody>
  </table>
</div>
{{/with}}
