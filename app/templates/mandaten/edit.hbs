{{!-- Page to edit mandaat --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit mandaat')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete mandaat.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new mandaat" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of mandaat. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>aantalHouders</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='aantalHouders' editable=true}}</td>
</tr>

        <tr><td>bestuursfunctie</td><td align='middle'>{{edit-belongs-to relName=changeset.bestuursfunctie relType="bestuursfunctie-code"}}</td></tr>
      <tr><td>bevatIn</td><td align='middle'>{{edit-belongs-to relName=changeset.bevatIn relType="bestuursorgaan"}}</td></tr>
        

    </tbody>
  </table>
</div>
{{/with}}
