{{!-- Page to show details of tax-rates --}}
<div class="details">
  <h2 class="title">{{t (humanize 'tax-rate details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit tax-rate
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "tax-rates" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "tax-rates.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of tax-rate. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'amount'}}</td>
        {{handle-attribute model=model attribute='amount' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'unit'}}</td>
        {{handle-attribute model=model attribute='unit' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'base'}}</td>
        {{handle-attribute model=model attribute='base' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'remark'}}</td>
        {{handle-attribute model=model attribute='remark' tagName='td' classes='properties__data'}}
      </tr>


    </tbody>
  </table>
</div>
