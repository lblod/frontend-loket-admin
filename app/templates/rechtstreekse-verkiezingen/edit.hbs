{{!-- Page to edit rechtstreekse-verkiezing --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit rechtstreekse-verkiezing')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete rechtstreekse-verkiezing.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new rechtstreekse-verkiezing" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of rechtstreekse-verkiezing. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>datum</td>
      <td align='middle'>{{handle-date model=changeset attribute='datum' editable=true}}</td>
</tr>
      <tr>
      <td>geldigheid</td>
      <td align='middle'>{{handle-date model=changeset attribute='geldigheid' editable=true}}</td>
</tr>

        <tr><td>steltSamen</td><td align='middle'>{{edit-belongs-to relName=changeset.steltSamen relType="bestuursorgaan"}}</td></tr>
        

    </tbody>
  </table>
</div>
{{/with}}
