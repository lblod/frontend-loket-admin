{{!-- Page to edit form-input --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit form-input')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete form-input.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new form-input" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of form-input. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>index</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='index' editable=true}}</td>
</tr>
      <tr>
      <td>displayType</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='displayType' editable=true}}</td>
</tr>
      <tr>
      <td>label</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='label' editable=true}}</td>
</tr>
      <tr>
      <td>options</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='options' editable=true}}</td>
</tr>
      <tr>
      <td>identifier</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='identifier' editable=true}}</td>
</tr>

        
        <tr><td>dynamicSubforms</td><td align='middle'>{{edit-has-many relName=changeset.dynamicSubforms relType="dynamic-subform"}}</td></tr>

    </tbody>
  </table>
</div>
{{/with}}
