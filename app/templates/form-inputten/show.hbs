{{!-- Page to show details of form-inputten --}}
<div class="details">
  <h2 class="title">{{t (humanize 'form-input details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit form-input
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "form-inputten" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "form-inputten.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of form-input. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'index'}}</td>
        {{handle-attribute model=model attribute='index' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'displayType'}}</td>
        {{handle-attribute model=model attribute='displayType' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'label'}}</td>
        {{handle-attribute model=model attribute='label' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'options'}}</td>
        {{handle-attribute model=model attribute='options' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'identifier'}}</td>
        {{handle-attribute model=model attribute='identifier' tagName='td' classes='properties__data'}}
      </tr>

      <tr>
        <td class="properties__label">{{t 'dynamicSubforms'}}</td>
       {{display-model-hasmany-relationship   model=model.dynamicSubforms itemRoute='dynamic-subformen.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
    </tbody>
  </table>
</div>
