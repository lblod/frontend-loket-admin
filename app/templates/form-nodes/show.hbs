{{!-- Page to show details of form-nodes --}}
<div class="details">
  <h2 class="title">{{t (humanize 'form-node details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit form-node
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "form-nodes" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "form-nodes.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of form-node. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'inputTypeMap'}}</td>
        {{handle-attribute model=model attribute='inputTypeMap' tagName='td' classes='properties__data'}}
      </tr>

      <tr>
        <td class="properties__label">{{t 'children'}}</td>
       {{display-model-hasmany-relationship   model=model.children itemRoute='form-inputten.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'parents'}}</td>
       {{display-model-hasmany-relationship   model=model.parents itemRoute='dynamic-subformen.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
    </tbody>
  </table>
</div>
