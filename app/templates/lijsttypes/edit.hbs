{{!-- Page to edit lijsttype --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit lijsttype')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete lijsttype.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new lijsttype" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of lijsttype. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>label</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='label' editable=true}}</td>
</tr>
      <tr>
      <td>scopeNote</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='scopeNote' editable=true}}</td>
</tr>

        
        

    </tbody>
  </table>
</div>
{{/with}}
