{{!-- Page to show details of document-statuses --}}
<div class="details">
  <h2 class="title">{{t (humanize 'document-status details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit document-status
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "document-statuses" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "document-statuses.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of document-status. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'label'}}</td>
        {{handle-attribute model=model attribute='label' tagName='td' classes='properties__data'}}
      </tr>


    </tbody>
  </table>
</div>
