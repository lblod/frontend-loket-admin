{{!-- Page to edit bestuurseenheid --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit bestuurseenheid')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete bestuurseenheid.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new bestuurseenheid" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of bestuurseenheid. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>naam</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='naam' editable=true}}</td>
</tr>

        <tr><td>werkingsgebied</td><td align='middle'>{{edit-belongs-to relName=changeset.werkingsgebied relType="werkingsgebied"}}</td></tr>
      <tr><td>classificatie</td><td align='middle'>{{edit-belongs-to relName=changeset.classificatie relType="bestuurseenheid-classificatie-code"}}</td></tr>
      <tr><td>primaireSite</td><td align='middle'>{{edit-belongs-to relName=changeset.primaireSite relType="vestiging"}}</td></tr>
      <tr><td>politiezone</td><td align='middle'>{{edit-belongs-to relName=changeset.politiezone relType="organisatie"}}</td></tr>
        <tr><td>contactinfo</td><td align='middle'>{{edit-has-many relName=changeset.contactinfo relType="contact-punt"}}</td></tr>
      <tr><td>posities</td><td align='middle'>{{edit-has-many relName=changeset.posities relType="positie"}}</td></tr>
      <tr><td>bestuursorganen</td><td align='middle'>{{edit-has-many relName=changeset.bestuursorganen relType="bestuursorgaan"}}</td></tr>

    </tbody>
  </table>
</div>
{{/with}}
