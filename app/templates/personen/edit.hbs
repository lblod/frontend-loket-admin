{{!-- Page to edit persoon --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit persoon')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete persoon.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new persoon" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of persoon. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>achternaam</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='achternaam' editable=true}}</td>
</tr>
      <tr>
      <td>alternatieveNaam</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='alternatieveNaam' editable=true}}</td>
</tr>
      <tr>
      <td>gebruikteVoornaam</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='gebruikteVoornaam' editable=true}}</td>
</tr>

        <tr><td>geboorte</td><td align='middle'>{{edit-belongs-to relName=changeset.geboorte relType="geboorte"}}</td></tr>
      <tr><td>identificator</td><td align='middle'>{{edit-belongs-to relName=changeset.identificator relType="identificator"}}</td></tr>
      <tr><td>geslacht</td><td align='middle'>{{edit-belongs-to relName=changeset.geslacht relType="geslacht-code"}}</td></tr>
        <tr><td>isAangesteldAls</td><td align='middle'>{{edit-has-many relName=changeset.isAangesteldAls relType="mandataris"}}</td></tr>
      <tr><td>isKandidaatVoor</td><td align='middle'>{{edit-has-many relName=changeset.isKandidaatVoor relType="kandidatenlijst"}}</td></tr>

    </tbody>
  </table>
</div>
{{/with}}
