{{!-- Page to list rechtsgronden-artikel --}}
<div class="content">
  <h2 class="title">{{t (humanize 'rechtsgronden-artikel')}}</h2>
  <div class="actions">{{#link-to "rechtsgronden-artikel.new" class="btn new" title="Create new item" tagName="button" }}Create{{/link-to}}</div>
  {{#if model}}
    <table>
      <thead>
        <tr>
          <th class="properties__label">id</th>
          {{sortable-table-header attribute="buitenwerkingtreding" currentSort=sort}}
{{sortable-table-header attribute="inwerkingtreding" currentSort=sort}}

          {{sortable-table-header attribute="rechtsgrondBesluit" currentSort=sort}}
          
        </tr>
      </thead>
      <tbody>
        {{#each model as |item|}}
          {{#link-to "rechtsgronden-artikel.show" item tagName='tr' }}
              <td>{{handle-attribute model=item attribute='id' classes='properties__data'}}</td>
        {{handle-date model=item attribute='buitenwerkingtreding' tagName='td' classes='properties__data'}}
        {{handle-date model=item attribute='inwerkingtreding' tagName='td' classes='properties__data'}}
            {{display-model-belongsto-relationship model=item.rechtsgrondBesluit tagName='td' itemRoute='rechtsgronden-besluit.show' configuredLabel='stringRep'}}

          {{/link-to}}
        {{/each}}
      </tbody>
    </table>

    {{#if model.meta.pagination}}
      {{pagination-component page=page numberOfItems=model.length total=model.meta.count links=model.meta.pagination}}
    {{/if}}
  {{else}}
    <div class="empty">
      No {{t (humanize 'rechtsgronden-artikel')}} in the database.
      Click on the <i class="fa fa-plus" aria-hidden="true"></i> button to create a new {{t (humanize "rechtsgrond-artikel")}}.
    </div>
  {{/if}}
</div>
