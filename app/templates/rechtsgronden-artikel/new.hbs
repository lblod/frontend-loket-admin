{{!-- Page to create a new rechtsgrond-artikel --}}
<div class="new">
  <h2 class="title">{{t (humanize 'New rechtsgrond-artikel')}}</h2>

  {{!--
    Actions to save new rechtsgrond-artikel
    or delete new rechtsgrond-artikel.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new rechtsgrond-artikel" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>

  {{!-- Table to show details of rechtsgrond-artikel. --}}
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>buitenwerkingtreding</td>
<td align='middle'>{{handle-date model=model attribute='buitenwerkingtreding' editable=true}}</td>
      </tr>
      <tr>
        <td>inwerkingtreding</td>
<td align='middle'>{{handle-date model=model attribute='inwerkingtreding' editable=true}}</td>
      </tr>
      <tr><td>rechtsgrondBesluit</td><td align='middle'>{{edit-belongs-to relName=model.rechtsgrondBesluit relType="rechtsgrond-besluit"}}</td></tr>
      
    </tbody>
  </table>
</div>
