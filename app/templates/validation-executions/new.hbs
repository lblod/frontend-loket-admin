{{!-- Page to create a new validation-execution --}}
<div class="new">
  <h2 class="title">{{t (humanize 'New validation-execution')}}</h2>

  {{!--
    Actions to save new validation-execution
    or delete new validation-execution.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new validation-execution" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>

  {{!-- Table to show details of validation-execution. --}}
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>status</td>
<td align='middle'>{{handle-attribute model=model attribute='status' editable=true}}</td>
      </tr>
      <tr>
        <td>{{t 'validationSet'}}</td>
        <td align='middle'>{{edit-string-set data=model.validationSet tagName='ul' classes='string-set'}}</td>
      </tr>
      <tr>
        <td>created</td>
<td align='middle'>{{handle-date model=model attribute='created' editable=true timePicker=true}}</td>
      </tr>
      
      <tr><td>errors</td><td align='middle'>{{edit-has-many relName=model.errors relType="validation-error"}}</td></tr>
      <tr><td>validations</td><td align='middle'>{{edit-has-many relName=model.validations relType="validation"}}</td></tr>
    </tbody>
  </table>
</div>
