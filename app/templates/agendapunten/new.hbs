{{!-- Page to create a new agendapunt --}}
<div class="new">
  <h2 class="title">{{t (humanize 'New agendapunt')}}</h2>

  {{!--
    Actions to save new agendapunt
    or delete new agendapunt.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new agendapunt" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>

  {{!-- Table to show details of agendapunt. --}}
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>beschrijving</td>
<td align='middle'>{{handle-attribute model=model attribute='beschrijving' editable=true}}</td>
      </tr>
      <tr>
        <td>{{t 'geplandOpenbaar'}}</td>
        <td>{{handle-attribute model=model attribute='geplandOpenbaar' classes='checkbox' editable=true boolean=true}}</td>
      </tr>
      <tr>
        <td>heeftOntwerpbesluit</td>
<td align='middle'>{{handle-attribute model=model attribute='heeftOntwerpbesluit' editable=true}}</td>
      </tr>
      <tr>
        <td>titel</td>
<td align='middle'>{{handle-attribute model=model attribute='titel' editable=true}}</td>
      </tr>
      <tr>
        <td>{{t 'type'}}</td>
        <td align='middle'>{{edit-string-set data=model.type tagName='ul' classes='string-set'}}</td>
      </tr>
      <tr><td>vorigeAgendapunt</td><td align='middle'>{{edit-belongs-to relName=model.vorigeAgendapunt relType="agendapunt"}}</td></tr>
      <tr><td>agenda</td><td align='middle'>{{edit-belongs-to relName=model.agenda relType="agenda"}}</td></tr>
      <tr><td>referenties</td><td align='middle'>{{edit-has-many relName=model.referenties relType="agendapunt"}}</td></tr>
    </tbody>
  </table>
</div>
