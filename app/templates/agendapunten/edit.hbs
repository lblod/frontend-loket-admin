{{!-- Page to edit agendapunt --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit agendapunt')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete agendapunt.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new agendapunt" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of agendapunt. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>beschrijving</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='beschrijving' editable=true}}</td>
</tr>
      <tr>
        <td>{{t 'geplandOpenbaar'}}</td>
        <td>{{handle-attribute model=model attribute='geplandOpenbaar' classes='checkbox' editable=true boolean=true}}</td>
      </tr>
      <tr>
      <td>heeftOntwerpbesluit</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='heeftOntwerpbesluit' editable=true}}</td>
</tr>
      <tr>
      <td>titel</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='titel' editable=true}}</td>
</tr>
      <tr>
        <td>{{t 'type'}}</td>
        <td align='middle'>{{edit-string-set data=changeset.type tagName='ul' classes='string-set'}}</td>
      </tr>

        <tr><td>vorigeAgendapunt</td><td align='middle'>{{edit-belongs-to relName=changeset.vorigeAgendapunt relType="agendapunt"}}</td></tr>
      <tr><td>agenda</td><td align='middle'>{{edit-belongs-to relName=changeset.agenda relType="agenda"}}</td></tr>
        <tr><td>referenties</td><td align='middle'>{{edit-has-many relName=changeset.referenties relType="agendapunt"}}</td></tr>

    </tbody>
  </table>
</div>
{{/with}}
